{
	"authors": [
		"Artha"
	],
	"copyright": "Copyright Â© 2024, Artha",
	"dependencies": {
		"fluid": "~>0.7.1"
	},
	"description": "Tree Sitter integration for Fluid's CodeInput",
	"license": "BSL",
	"name": "fluid-tree-sitter",
	"targetPath": "build",
	"sourcePaths": [
		"source/fluid"
	],
	"stringImportPaths": [
		"external"
	],
	"lflags-linux": [
		"-rpath=$$ORIGIN",
		"-Lbuild"
	],
	"lflags-osx": [
		"-rpath",
		"@executable_path/"
	],
	"dflags": [
		"-P-I$PACKAGE_DIR/external/tree-sitter/lib/include"
	],
	"configurations": [
		{
			"name": "windows-bin",
			"targetType": "library",
			"platforms": [
				"windows"
			],
			"libs": [
				"tree-sitter"
			],
			"sourcePaths": [
				"source/fluid"
			],
			"lflags": [
				"/LIBPATH:$PACKAGE_DIR/libraries/windows"
			],
			"copyFiles": [
				"$PACKAGE_DIR/libraries/windows/libtree-sitter.dll"
			]
		},
		{
			"name": "default",
			"targetType": "library",
			"sourcePaths": [
				"source/fluid"
			],
			"dependencies": {
				"fluid-tree-sitter:tree-sitter": {
					"path": "."
				}
			}
		},
		{
			"name": "external",
			"libs": [
				"tree-sitter"
			]
		},
		{
			"name": "unittest",
			"sourceFiles": [
				"source/lib_tree_sitter.c"
			],
			"dependencies": {
				"fluid-tree-sitter:tree-sitter": {
					"path": "."
				},
				"fluid-tree-sitter:smaug": {
					"path": "."
				},
				"fluid-tree-sitter:d": {
					"path": "."
				}
			}
		},
		{
			"name": "unittest-external",
			"libs": [
				"tree-sitter"
			],
			"dependencies": {
				"fluid-tree-sitter:smaug": {
					"path": "."
				},
				"fluid-tree-sitter:d": {
					"path": "."
				}
			}
		}
	],
	"subPackages": [
		{
			"name": "tree-sitter",
			"sourcePaths": [],
			"importPaths": [],
			"targetPath": "build",
			"targetType": "dynamicLibrary",
			"configurations": [
				{
					"name": "default",
					"dflags": [
						"-betterC",
						"-P-I$PACKAGE_DIR/external/tree-sitter/lib/include",
						"-P-I$PACKAGE_DIR/external/tree-sitter/lib/src"
					],
					"sourceFiles": [
						"source/lib_tree_sitter.c"
					]
				}
			]
		},
		{
			"name": "smaug",
			"sourceFiles": [
				"external/tree-sitter-smaug/src/parser.c"
			],
			"sourcePaths": [],
			"importPaths": [],
			"targetPath": "build",
			"targetType": "dynamicLibrary",
			"dflags": [
				"-betterC",
				"-P-I$PACKAGE_DIR/external/tree-sitter-smaug/src"
			],
			"libs-windows": [
				"LIBCMT"
			]
		},
		{
			"name": "d",
			"sourceFiles": [
				"external/tree-sitter-d/src/parser.c",
				"external/tree-sitter-d/src/scanner.c"
			],
			"sourcePaths": [],
			"importPaths": [],
			"buildRequirements": [
				"allowWarnings"
			],
			"targetPath": "build",
			"targetType": "dynamicLibrary",
			"dflags": [
				"-betterC",
				"-P-I$PACKAGE_DIR/external/tree-sitter-d/src"
			],
			"libs-windows": [
				"LIBCMT"
			]
		}
	]
}
