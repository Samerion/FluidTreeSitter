{
	"authors": [
		"Artha"
	],
	"copyright": "Copyright Â© 2024, Artha",
	"dependencies": {
		"fluid": ">=0.0.0"
	},
	"description": "Tree Sitter integration for Fluid's CodeInput",
	"license": "BSL",
	"name": "fluid-tree-sitter",
	"targetPath": "build",
	"sourcePaths": ["source/fluid"],
	"stringImportPaths": ["external"],
	"preGenerateCommands": [
		"git submodule init",
		"git submodule update"
	],
	"lflags-linux": [
		"-rpath=$$ORIGIN",
		"-Lbuild"
	],
	"lflags-osx": [
		"-rpath",
		"@executable_path/"
	],
	"configurations": [
		{
			"name": "default",
			"targetType": "sourceLibrary",
			"sourceFiles": ["source/lib_tree_sitter.c"]
		},
		{
			"name": "external",
			"libs": ["tree-sitter"]
		},
		{
			"name": "unittest",
			"sourceFiles": ["source/lib_tree_sitter.c"],
			"dependencies": {
				"fluid-tree-sitter:smaug": ">=0.0.0",
				"fluid-tree-sitter:d": ">=0.0.0"
			}
		},
		{
			"name": "unittest-external",
			"libs": ["tree-sitter"],
			"dependencies": {
				"fluid-tree-sitter:smaug": ">=0.0.0",
				"fluid-tree-sitter:d": ">=0.0.0"
			}
		}
	],
	"subPackages": [
		{
			"name": "smaug",
			"sourceFiles": [
				"source/tree_sitter_smaug.c"
			],
			"sourcePaths": [],
			"importPaths": [],
			"targetPath": "build",
			"targetType": "dynamicLibrary"
		},
		{
			"name": "d",
			"sourceFiles": [
				"source/tree_sitter_d.c",
				"source/tree_sitter_d_scanner.c"
			],
			"sourcePaths": [],
			"importPaths": [],
			"targetPath": "build",
			"targetType": "dynamicLibrary"
		}
	]
}
